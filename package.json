{
  "name": "generator-eezing",
  "version": "0.1.0",
  "description": "eezing's node templates",
  "files": [
    "generators"
  ],
  "keywords": [
    "yeoman-generator"
  ],
  "scripts": {
    "pretty": "prettier --write '**/*.js' --write"
  },
  "dependencies": {
    "deep-extend": "^0.6.0",
    "yeoman-generator": "^3.1.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.8.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.1.3",
    "prettier": "^1.15.1"
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "parser": "babel-eslint",
    "plugins": [
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "rules": {
      "no-console": 2
    }
  },
  "prettier": {
    "semi": true,
    "bracketSpacing": true,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:lint"
    }
  }
}
